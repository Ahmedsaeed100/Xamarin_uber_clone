<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tripdetails_bottomsheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uberAsh"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#fff"
        android:padding="16dp">

      <LinearLayout
        android:orientation="vertical"
        android:layout_height="1dp"
        android:layout_weight="0.6"
        android:layout_width="match_parent">

            <ImageView
                android:contentDescription="cwessss"
                android:layout_gravity="center_horizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/loginimg"/>
            <TextView
                android:id="@+id/tripFareText"
                android:layout_margin="10dp"
                android:text="$100 - $150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/uberAsh"/>

        </LinearLayout>
       
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.4">

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.4">
                    <ImageView
                        android:contentDescription="wallet"
                        android:src="@mipmap/ic_wallet_action"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/uberAccentClick"/>

                    <TextView
                        android:text="Cash"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"/>
 
                </LinearLayout>
              
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/TripTime"
                        android:text="35 mins"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"/>

                </RelativeLayout>

             </LinearLayout>
 
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
          <Button
            android:id="@+id/RequestDriverbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Cap"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:background="@drawable/uberroundbutton"
            android:textColor="@color/Upperwhite"
            android:layout_alignParentBottom="true"/>
           
            </RelativeLayout>

        </LinearLayout>

  </LinearLayout>

</FrameLayout>
