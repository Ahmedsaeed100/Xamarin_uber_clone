
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white"
    android:minHeight="420dp"
    android:minWidth="300dp"
    >

    <RelativeLayout
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_weight="0.3">

        <ProgressBar
            android:id="@+id/progressSpinner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/uberAccentClick"
            android:layout_centerHorizontal="true"
            android:soundEffectsEnabled="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/progressSpinner"
            android:text="finding a nearest driver"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5"
        >
        <ImageView
            android:contentDescription="logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/loginimg"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated Fare"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/farestxt"
            android:text="$2000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.2"
        >
        <Button
            android:id="@+id/cancelRequestbtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAllCaps="false"
            android:background="@drawable/uberroundbutton"
            android:text="Cancel Trip"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>
</LinearLayout>